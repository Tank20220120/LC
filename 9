Easy

Algo:
Time:O(log10n)
Space:O(1)

class Solution {
    public boolean isPalindrome(int x) {
        if (x < 0) return false;
        int rev = reverse(x);
        return rev == x;
    }
    private int reverse(int x) {
        int rev = 0;
        while (x != 0) {
            int pop = x % 10;
            x /= 10;
            if (rev > Integer.MAX_VALUE || (rev == Integer.MAX_VALUE && pop > 7)) return -1;
            rev = rev * 10 + pop;
        }
        return rev;
    }
}
