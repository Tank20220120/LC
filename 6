Medium
Algo: divide into groups
Time: O(n)
Space: O(n)

class Solution {
    public String convert(String s, int numRows) {
        if (numRows == 1) return s;
        int len = s.length();
        int groupLen = numRows * 2 - 2;
        StringBuilder sb = new StringBuilder();
        for (int i = 0; i < numRows; i++) {
            int pos = i;
            while (pos < len) {
                sb.append(s.charAt(pos));
                if (pos % groupLen == 0 || pos % groupLen == numRows - 1) {
                    pos += groupLen;
                } else if (pos % groupLen < numRows) {
                    pos += groupLen - pos % groupLen - i;
                } else if (pos % groupLen >= numRows) {
                    pos += groupLen - pos % groupLen + i;
                }
            }
        }
        return sb.toString();
    }
}
